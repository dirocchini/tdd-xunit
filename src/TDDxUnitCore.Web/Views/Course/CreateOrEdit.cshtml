@model TDDxUnitCore.Domain.Courses.DTOCourse

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DTOCourse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrEdit" data-ajax="true" data-ajax-method="POST" data-ajax-success="window.location = '/Course'">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workload" class="control-label"></label>
                <input asp-for="Workload" class="form-control" />
                <span asp-validation-for="Workload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Audience" class="control-label"></label>
                <select class="form-control" asp-for="Audience">
                    <option value="Studant">Studant</option>
                    <option value="NonDev">NonDev</option>
                    <option value="Employee">Employee</option>
                    <option value="CTO">CTO</option>
                </select>
                <span asp-validation-for="Audience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
